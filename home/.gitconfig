[user]
	name = Adam Wong
	email = adamwong246@gmail.com
[core]
	excludesfile = /Users/r625503/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge]
	tool = opendiff

[color]
	branch = auto
 	diff = auto
 	status = auto
[color "branch"]
 	current = yellow reverse
 	local = yellow
 	remote = green
[color "diff"]
 	meta = yellow bold
 	frag = magenta bold
 	old = red
 	new = cyan
[color "status"]
 	added = yellow
 	changed = green
 	untracked = cyan
